@model NonLeague.Models.LeagueTable

<h3>Tables</h3>
<hr />
<h3>@Model.Competition</h3>
<table class="table table-striped table-bordered table-condensed no-gutters-horizontal">
    <tr>
        <th>Pos.</th>
        <th>Team</th>
        <th class="text-center">P</th>
        <th class="text-center">W</th>
        <th class="text-center">D</th>
        <th class="text-center">L</th>
        <th class="text-center">GD</th>
        <th class="text-center">Pts.</th>

    </tr>
@foreach(var team in Model.Team)
{
    <tr>
        <td>@team.Position</td>
        <td>@team.Name</td>
        <td class="text-center">@team.Played</td>
        <td class="text-center">@team.Won</td>
        <td class="text-center">@team.Drawn</td>
        <td class="text-center">@team.Lost</td>
        <td class="text-center">@team.GoalDifference</td>
        <td class="text-center">@team.Points</td>
    </tr>
}
</table>